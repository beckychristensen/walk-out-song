  <div class="flex my-8">
    <EmojiSelector
      @selected={{eq emojiSong "heart"}}
      @onclick={{action (mut emojiSong) "heart"}}
     >
      😍
    </EmojiSelector>
    <EmojiSelector
      @selected={{eq emojiSong "poop"}}
      @onclick={{action (mut emojiSong) "poop"}}
    >
      💩
    </EmojiSelector>
    <EmojiSelector
      @selected={{eq emojiSong "sob"}}
      @onclick={{action (mut emojiSong) "sob"}}
    >
      😭
    </EmojiSelector>
    <EmojiSelector
      @selected={{eq emojiSong "curse"}}
      @onclick={{action (mut emojiSong) "curse"}}
    >
      🤬
    </EmojiSelector>
  </div>

  {{#if emojiSong}}
    <Player @song={{get this.songs this.emojiSong}} as |song|>
      <form onsubmit={{action claimSong}}>
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
            Email
          </label>
          <input onchange={{action (mut email) value="target.value"}} class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="text" placeholder="Email">
        </div>

        <input value="Claim this song!" type=submit class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" />
      </form>
    </Player>
  {{/if}}
  <div>
    <input
      onkeyup={{perform searchResultsTask value="target.value"}}
      placeholder="choose custom song"
      class="mb-4 rounded-full shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
    >
  </div>
  {{#if searchResultsTask.isRunning}}
    <LoadingSpinner />
  {{else}}
    {{#if searchTerm}}
      {{#each results as |track|}}
        <div class="my-4 p-4 bg-gray-300 clearfix">
          <img src="{{track.album.images.firstObject.url}}" class="float-left" width=30 />
          {{track.name}} by
          {{track.album.artists.firstObject.name}}
        </div>
      {{else}}
        <iframe src="https://open.spotify.com/embed/album/1DFixLWuPkv3KT3TnV35m3" width="300" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
      {{/each}}
    {{/if}}
  {{/if}}